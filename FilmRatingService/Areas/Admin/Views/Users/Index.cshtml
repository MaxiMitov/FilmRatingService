@model IEnumerable<FilmRatingService.Areas.Identity.Data.ApplicationUser>
@* Using your custom ApplicationUser *@

@{
    ViewData["Title"] = "Manage Users";
    // You can set a specific layout for the Admin area in Areas/Admin/Views/_ViewStart.cshtml
    // For example: Layout = "_AdminLayout";
    // If not set, it will use the default _Layout.cshtml from /Views/Shared/
}

<div class="container mt-4">
    <h1 class="mb-4">Manage Users</h1>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>User ID</th>
                    <th>Username (Email)</th>
                    <th>Full Name</th>
                    <th>Email Confirmed</th>
                    <th>Actions</th> @* Placeholder for future actions like Edit, Delete, Manage Roles *@
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.Name</td> @* Your custom Name property *@
                        <td>
                            @if (user.EmailConfirmed)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">No</span>
                            }
                        </td>
                        <td>
                            @* Placeholder for future action links *@
                            @* <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a> *@
                            @* <a asp-action="ManageUserRoles" asp-route-userId="@user.Id" class="btn btn-sm btn-info">Roles</a> *@
                            @* <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a> *@
                            Details | Edit | Delete (Future Actions)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No users found in the system.
        </div>
    }
</div>

@* Basic styling for the table - you can move this to a site-wide CSS file or an admin-specific CSS file *@
<style>
    .thead-dark th {
        background-color: #343a40; /* Bootstrap dark header color */
        color: white;
    }

    .table-hover tbody tr:hover {
        background-color: #f2f2f2; /* Light grey hover for default theme */
        /* If using a dark theme overall, you might want a dark hover color */
        /* color: #212121; /* Text color on hover for dark theme */
    }

    .badge {
        font-size: 0.9em;
    }
    /* Adjust for your dark theme if necessary */
    body.dark-theme .table { /* Example if you have a dark-theme class on body */
        color: #e0e0e0;
    }

    body.dark-theme .table-hover tbody tr:hover {
        background-color: #3a3a3a;
        color: #ffffff;
    }

    body.dark-theme .thead-dark th {
        background-color: #454d55;
        color: #ffffff;
    }
</style>