@{
    ViewData["Title"] = "Forbidden (403)";
}

<div class="container text-center mt-5">
    <div style="font-size: 6rem; color: #dc3545;">🛑</div>
    <h1 class="display-4 mt-3">Access Forbidden</h1>
    <p class="lead">
        Sorry, you do not have the necessary permissions to access this page, even if you are logged in.
    </p>
    <p class="mt-4">
        If you believe this is an error or you require access, please contact the site administrator.
        You can also go back to the
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">Homepage</a>.
    </p>
    <hr class="my-4">
    <p class="text-muted">
        Error Code: 403
    </p>
</div>

